<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="50dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/add_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Please enter your location details below"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/add_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Address: "
            android:textSize="18sp"
             />

        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Address: eg. Moriah Street"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/post_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Postcode: "
            android:textSize="18sp"
            />

        <EditText
            android:id="@+id/postcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="4 digit Postcode eg. 3168"
            android:textSize="18sp"
            android:inputType="number"/>

        <TextView
            android:id="@+id/count_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Country code: "
            android:textSize="18sp"
            />

        <EditText
            android:id="@+id/country_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="2 letter Country Code eg. AU"
            android:textSize="18sp"
            android:inputType="text"/>

        <TextView
            android:id="@+id/city_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="City: "
            android:textSize="18sp"
            />

        <EditText
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="City name eg. Melbourne"
            android:textSize="18sp"
            android:inputType="textPostalAddress"/>

        <Button
            android:id="@+id/findlocbtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Set Location"
            android:layout_gravity="center_horizontal"
          />
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_container_view_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp" />



    </LinearLayout>

</ScrollView>